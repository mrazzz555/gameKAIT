<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="gameKAIT.game">
    <ContentPage.Content>
        <Grid>
            <Button BackgroundColor="Gray"
                VerticalOptions="CenterAndExpand"
                HorizontalOptions="Center"
                HeightRequest="150"
                WidthRequest="250"
                Margin="0,350,0,0"
                x:Name="Green"
                Clicked="Green_Click"
                />
            <Button BackgroundColor="Gray"
                VerticalOptions="CenterAndExpand"
                HorizontalOptions="Center"
                HeightRequest="150"
                WidthRequest="250"
                x:Name="Red"
                Clicked="Red_Click"
                />
            <Button BackgroundColor="Gray"
                VerticalOptions="CenterAndExpand"
                HorizontalOptions="Center"
                Margin="0,0,0,350"
                HeightRequest="150"
                WidthRequest="250"
                x:Name="Blue"
                Clicked="Blue_Click"
                />
            
        </Grid>
    </ContentPage.Content>
</ContentPage>